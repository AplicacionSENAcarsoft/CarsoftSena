<%= simple_form_for([@responsible, @area_center], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @area_center %>

  <%= f.input :name %>
  <%= f.input :extension %>
  <%= f.input :phone %>
  <%= f.input :specification %>
  <%= f.label :responsible_id, :label => "Responsable",  :required => true %>
            <%= f.collection_select :responsible_id , Responsible.all, :id, :name, :prompt => "Responsable"  %>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', responsible_area_centers_path, :class => 'btn btn-small' %>
  </div>
<% end %>

