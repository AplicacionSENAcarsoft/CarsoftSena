<%= simple_form_for([@area_center, @center], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

    <%= f.error_notification %>
    <%= display_base_errors @center %>
    
    <p><%= f.input :name, :label => "Nombre",  :required => true  %></p>

    <p><%= f.input :code, :label => "Codigo",  :required => true  %></p>
   
    <p><%= f.input :area_center_id, :label => "Area centro",  :required => true  %></p>

    <div class="form-actions">
	    <%= f.submit "guardar", :class => 'btn btn-primary' %>
	    <%= link_to 'Atras',  area_center_centers_path, :class => 'btn btn-small' %>
  	</div>
<% end %>
